<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmnts.BudgetTrackingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ik"
        android:backgroundTint="#7CB342">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="97dp"
            android:layout_marginTop="165dp"
            android:layout_marginEnd="97dp"
            android:layout_marginBottom="230dp"
            android:text="Tracking Budget"
            android:textColor="#b8b8b8"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/S"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Go"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="161dp"
            android:layout_marginEnd="162dp"
            android:layout_marginBottom="110dp"
            android:backgroundTint="#b8b8b8"
            android:text="Go"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/FABtoInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:clickable="true"
            android:src="@drawable/baseline_list_24"
            app:backgroundTint="#b8b8b8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/FABtoProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:clickable="true"
            android:src="@drawable/baseline_person_2_24"
            app:backgroundTint="#b8b8b8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/S"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="380dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="185dp"
            android:backgroundTint="#b8b8b8"
            android:ems="10"
            android:hint="How much did you pay?"
            android:inputType="numberSigned"
            android:textColor="#9C27B0"
            app:layout_constraintBottom_toTopOf="@+id/Go"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.509" />

        <ImageButton
            android:id="@+id/grfBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="155dp"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="156dp"
            android:layout_marginBottom="71dp"
            android:src="@drawable/baseline_timeline_24"
            app:layout_constraintBottom_toTopOf="@+id/S"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navbarhome"
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            app:itemIconTint="#00897B"
            app:itemRippleColor="#00897B"
            app:itemTextColor="#00897B"
            app:menu="@menu/bottom_naagation_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>