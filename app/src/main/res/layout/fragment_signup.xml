<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserManagement.SignupFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/_d_graphic_wallpaper_with_colorful_grainy_gradients">

        <EditText
            android:id="@+id/etUsernameS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="31dp"
            android:backgroundTint="#b8b8b8"
            android:ems="10"
            android:hint="UserName"
            android:inputType="textEmailAddress"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/etPasswordS"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <EditText
            android:id="@+id/etPasswordS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#b8b8b8"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/etEmail"
            app:layout_constraintStart_toStartOf="@+id/etUsernameS"
            app:layout_constraintTop_toBottomOf="@+id/etUsernameS" />

        <Button
            android:id="@+id/btSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="142dp"
            android:backgroundTint="#b8b8b8"
            android:text="SignUp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etAddres"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btStoL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="37dp"
            android:backgroundTint="#b8b8b8"
            android:onClick="backLogin"
            android:text="Back"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="31dp"
            android:backgroundTint="#b8b8b8"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/etAddres"
            app:layout_constraintStart_toStartOf="@+id/etPasswordS"
            app:layout_constraintTop_toBottomOf="@+id/etPasswordS" />

        <EditText
            android:id="@+id/etAddres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="53dp"
            android:backgroundTint="#b8b8b8"
            android:ems="10"
            android:hint="Addres"
            android:inputType="textPostalAddress"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/btSignup"
            app:layout_constraintStart_toStartOf="@+id/etEmail"
            app:layout_constraintTop_toBottomOf="@+id/etEmail" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="156dp"
            android:layout_marginBottom="64dp"
            android:src="@drawable/icons8_app_192___"
            app:layout_constraintBottom_toTopOf="@+id/etUsernameS"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btStoL"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>